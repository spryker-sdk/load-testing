<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{{ title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A layout example that shows off a responsive email layout.">
    <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.1/build/pure-min.css"
          integrity="sha384-oAOxQR6DkCoMliIh8yFnu25d7Eq/PHS21PClpwjOTeU2jRSq11vu66rf90/cZr47" crossorigin="anonymous">
    <link href="https://unpkg.com/tabulator-tables@4.5.1/dist/css/tabulator.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/layout.css">
    <script type="text/javascript" src="/js/layout.js"></script>
    <script type="text/javascript" src="https://unpkg.com/tabulator-tables@4.5.1/dist/js/tabulator.js"></script>
    <script src="https://use.fontawesome.com/97ec165e51.js"></script>
</head>
<body>

<div id="layout" class="content pure-g">
    <div id="nav" class="pure-u">
        <a href="#" class="nav-menu-button">Menu</a>

        <div class="nav-inner">

            {{^jobs}}
                <a class="primary-button pure-button" href="/run">New Test</a>
            {{/jobs}}

            <div class="pure-menu">
                <ul class="pure-menu-list">
                    {{#jobs}}
                        <li class="pure-menu-item"><a href="{{logPath}}" class="pure-menu-link">Running <span class="email-count">(1)</span></a></li>
                    {{/jobs}}
                    <li class="pure-menu-heading">Instances</li>
                    <a class="primary-button pure-button" href="/instances">New instance</a>
                    <li class="pure-menu-item"><a href="/" class="pure-menu-link">ALL</a></li>
                    {{#projects}}
                        <li class="pure-menu-item">
                            <a href="/?filter[instance]={{key}}" class="pure-menu-link">{{key}}</a>
                        </li>
                    {{/projects}}
                    <li class="pure-menu-heading">Tests</li>
                    <li class="pure-menu-item"><a href="/" class="pure-menu-link">ALL</a></li
                    {{#scenarios}}
                        {{#tests}}
                        <li class="pure-menu-item"><small><a href="/?filter[testName]={{id}}" class="pure-menu-link">{{id}}</a></small></li>
                        {{/tests}}
                    {{/scenarios}}
                </ul>
            </div>
        </div>
    </div>
    <div id="main" class="pure-u">
        <div id="content">
